div.js {
  overflow:hidden;
}

div.js .carousel-wrap {
  width:393px;
  min-height:385px;
}

.portfolio div.js .carousel-wrap {
  width:936px;
  min-height:553px;
}

div.js ul li {
  overflow:hidden;
  display:inline;
  float:left;
  text-align:center;
  width:393px;
  min-height:385px;
}

.portfolio div.js ul li {
  width:936px;
  min-height:553px;
}

.slider, .slider .carousel-wrap {
  margin:0;
  border:0;
}

.slider .carousel-control {
  border:0;
}

.slider .carousel-next, .slider .carousel-previous {
  display: block;
  text-indent:-99999px;
  position: absolute;
  width:17px;
  height:55px;
  top: 245px;
  background:url(<%= asset_path "sprite.png" %>) no-repeat 0 -53px;
}

.slider .carousel-next {
  right: 20px;
  background-position: -18px -53px;
}

.slider .carousel-previous {
  left: 20px;
  z-index: 9999;
}

.slider .carousel-previous.disabled {
  background-position:0 -109px;
}

.slider .carousel-next.disabled {
  background-position:-18px -109px;
}

.slider div {
  margin:0;
  padding:0;
  border:0;
}

.slider ul {
  margin:0;
  padding:0;
  list-style:none;
}

.slider ul li {
  position:relative;
  margin:0;
}

div.center-wrap {
  overflow:hidden;
  clear:both;
}
